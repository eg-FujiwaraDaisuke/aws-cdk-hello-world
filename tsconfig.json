{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./.build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "bin/**/*",
    "aws-cdk",
  ],
  "exclude": ["node_modules"]
}
