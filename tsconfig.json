{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "dist", // 出力先を変更（通常は dist フォルダが一般的）
    "rootDir": "./", // プロジェクトのルートディレクトリを指定
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "bin/**/*", // bin フォルダを含める
  ],
  "exclude": ["node_modules"]
}
